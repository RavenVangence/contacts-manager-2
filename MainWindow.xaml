<Window x:Class="ContactsManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:ContactsManager.ViewModels"
        xmlns:views="clr-namespace:ContactsManager.Views"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Contacts Manager"
        Height="640"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource SurfaceBrush}">

    <DockPanel LastChildFill="True">
        <!-- Menu -->
        <Menu DockPanel.Dock="Top"
              Background="{StaticResource CardBrush}">
            <MenuItem Header="File">
                <MenuItem Header="Import"
                          Click="Import_Click"/>
                <MenuItem Header="Export"
                          Click="Export_Click"/>
                <Separator/>
                <MenuItem Header="Exit"
                          Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="Contacts">
                <MenuItem Header="Open Contacts Manager"
                          Click="OpenContactsManager_Click"/>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Add Contact"
                          Click="AddContact_Click"/>
                <MenuItem Header="Edit Contact"
                          Click="EditContact_Click"/>
                <MenuItem Header="Delete Contact"
                          Click="DeleteContact_Click"/>
            </MenuItem>
            <MenuItem Header="View">
                <MenuItem Header="Sort by Name"
                          Click="SortByName_Click"/>
                <MenuItem Header="Sort by Used Status"
                          Click="SortByUsed_Click"/>
            </MenuItem>
        </Menu>

        <!-- Simple Navigation Bar -->
        <Border DockPanel.Dock="Top"
                Style="{StaticResource TabContainer}">
            <StackPanel Orientation="Horizontal">
                <!-- Home Navigation Link -->
                <Button x:Name="HomeNavButton"
                        Background="Transparent"
                        Foreground="{StaticResource TextBrush}"
                        BorderThickness="0"
                        Padding="16,8"
                        Height="36"
                        Margin="0,0,8,0"
                        ToolTip="Go to Home"
                        Cursor="Hand"
                        Click="HomeNavButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="6"
                                                Height="{TemplateBinding Height}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"
                                                              Margin="{TemplateBinding Padding}"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver"
                                                     Value="True">
                                                <Setter Property="Background"
                                                        Value="{StaticResource SurfaceBrush}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <!-- Show active state when on home view -->
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentPageType}"
                                             Value="Home">
                                    <Setter Property="Background"
                                            Value="{StaticResource PrimaryBrush}"/>
                                    <Setter Property="Foreground"
                                            Value="White"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe MDL2 Assets"
                                   Text="&#xE80F;"
                                   FontSize="14"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>
                        <TextBlock Text="Home"
                                   FontSize="14"
                                   FontWeight="Medium"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Contacts Navigation Link -->
                <Button x:Name="ContactsNavButton"
                        Background="Transparent"
                        Foreground="{StaticResource TextBrush}"
                        BorderThickness="0"
                        Padding="16,8"
                        Height="36"
                        Margin="0,0,8,0"
                        ToolTip="Go to Contacts"
                        Cursor="Hand"
                        Click="ContactsNavButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="6"
                                                Height="{TemplateBinding Height}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"
                                                              Margin="{TemplateBinding Padding}"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver"
                                                     Value="True">
                                                <Setter Property="Background"
                                                        Value="{StaticResource SurfaceBrush}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <!-- Show active state when on contacts view -->
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentPageType}"
                                             Value="Contacts">
                                    <Setter Property="Background"
                                            Value="{StaticResource PrimaryBrush}"/>
                                    <Setter Property="Foreground"
                                            Value="White"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe MDL2 Assets"
                                   Text="&#xE77B;"
                                   FontSize="14"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>
                        <TextBlock Text="Contacts"
                                   FontSize="14"
                                   FontWeight="Medium"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>

        <!-- Content Area with Frame -->
        <Frame x:Name="MainFrame"
               NavigationUIVisibility="Hidden"
               Margin="16"/>
    </DockPanel>
</Window>

<Window x:Class="ContactsManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:ContactsManager.ViewModels"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Contacts Manager"
        Height="640"
        Width="1000"
        Background="{StaticResource SurfaceBrush}">
    <Window.DataContext>
        <viewModels:MainViewModel/>
    </Window.DataContext>

    <DockPanel LastChildFill="True">
        <!-- Menu -->
        <Menu DockPanel.Dock="Top"
                Background="{StaticResource CardBrush}">
            <MenuItem Header="File">
                <MenuItem Header="Import"
                        Command="{Binding ImportCommand}"/>
                <MenuItem Header="Export"
                        Command="{Binding ExportCommand}"/>
                <Separator/>
                <MenuItem Header="Exit"
                        Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Add Contact"
                        Command="{Binding AddCommand}"/>
                <MenuItem Header="Edit Contact"
                        Command="{Binding EditCommand}"/>
                <MenuItem Header="Delete Contact"
                        Command="{Binding DeleteCommand}"/>
            </MenuItem>
            <MenuItem Header="View">
                <MenuItem Header="Sort by Name"
                        Command="{Binding SortByNameCommand}"/>
                <MenuItem Header="Sort by Email"
                        Command="{Binding SortByEmailCommand}"/>
                <MenuItem Header="Sort by Company"
                        Command="{Binding SortByCompanyCommand}"/>
                <MenuItem Header="Sort by Used Status"
                        Command="{Binding SortByUsedCommand}"/>
                <MenuItem Header="Sort by Date Modified"
                        Command="{Binding SortByDateCommand}"/>
            </MenuItem>
        </Menu>

        <!-- Top bar -->
        <Border DockPanel.Dock="Top"
                Background="{StaticResource CardBrush}"
                BorderBrush="{StaticResource BorderBrushSoft}"
                BorderThickness="0,0,0,1">
            <Grid Margin="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Contacts"
                           Style="{StaticResource H1}"
                           VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Button Style="{StaticResource GhostButton}"
                            Content="Import"
                            Command="{Binding ImportCommand}"/>
                    <Button Style="{StaticResource GhostButton}"
                            Content="Export"
                            Command="{Binding ExportCommand}"/>
                    <Button Style="{StaticResource GhostButton}"
                            Content="Add"
                            Command="{Binding AddCommand}"/>
                    <Button Style="{StaticResource GhostButton}"
                            Content="Edit"
                            Command="{Binding EditCommand}"/>
                    <Button Style="{StaticResource GhostButton}"
                            Content="Delete"
                            Command="{Binding DeleteCommand}"/>
                    <Button Style="{StaticResource PrimaryButton}"
                            Content="Save"
                            Command="{Binding SaveCommand}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content -->
        <Grid Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="360"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left: list -->
            <Border Style="{StaticResource Card}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <DockPanel LastChildFill="True">
                        <Grid DockPanel.Dock="Top"
                              Margin="0,0,0,12">
                            <TextBox x:Name="SearchBox"
                                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBlock Text="Search contacts..."
                                       Margin="12,0,0,0"
                                       VerticalAlignment="Center"
                                       Foreground="{StaticResource SubtleTextBrush}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility"
                                                Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text.Length, ElementName=SearchBox}"
                                                         Value="0">
                                                <Setter Property="Visibility"
                                                        Value="Visible"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsFocused, ElementName=SearchBox}"
                                                         Value="True">
                                                <Setter Property="Visibility"
                                                        Value="Collapsed"/>
                                            </DataTrigger>
                                            <Trigger Property="Visibility"
                                                     Value="Visible">
                                                <Setter Property="IsHitTestVisible"
                                                        Value="False"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>

                        <StackPanel DockPanel.Dock="Top"
                                Orientation="Horizontal"
                                Margin="0,0,0,8">
                            <TextBlock Text="Sort by:"
                                    VerticalAlignment="Center"
                                    Margin="0,0,8,0"
                                    Style="{StaticResource Body}"/>
                            <Button Content="Name"
                                    Style="{StaticResource GhostButton}"
                                    Command="{Binding SortByNameCommand}"
                                    Margin="0,0,4,0"
                                    Padding="6,2"/>
                            <Button Content="Email"
                                    Style="{StaticResource GhostButton}"
                                    Command="{Binding SortByEmailCommand}"
                                    Margin="0,0,4,0"
                                    Padding="6,2"/>
                            <Button Content="Used"
                                    Style="{StaticResource GhostButton}"
                                    Command="{Binding SortByUsedCommand}"
                                    Margin="0,0,4,0"
                                    Padding="6,2"/>
                            <Button Content="Date"
                                    Style="{StaticResource GhostButton}"
                                    Command="{Binding SortByDateCommand}"
                                    Margin="0,0,4,0"
                                    Padding="6,2"/>
                        </StackPanel>
                    </DockPanel>

                    <ScrollViewer Grid.Row="1"
                                  VerticalScrollBarVisibility="Auto">
                        <ListBox ItemsSource="{Binding ContactsView}"
                                 SelectedItem="{Binding SelectedContact}"
                                 BorderThickness="0"
                                 ItemContainerStyle="{StaticResource ContactListItem}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{Binding Used, Converter={StaticResource BoolToColorConverter}}"
                                            CornerRadius="6"
                                            Padding="4,6">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="12"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Border Style="{StaticResource AvatarCircle}"
                                                    VerticalAlignment="Center">
                                                <TextBlock Text="{Binding FullName, Converter={StaticResource InitialsConverter}}"
                                                           Foreground="{StaticResource PrimaryBrush}"
                                                           FontWeight="SemiBold"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Center"/>
                                            </Border>
                                            <StackPanel Grid.Column="2"
                                                        VerticalAlignment="Center">
                                                <TextBlock Text="{Binding FullName}"
                                                           FontWeight="SemiBold"
                                                           Foreground="{StaticResource TextBrush}"/>
                                                <TextBlock Text="{Binding Email}"
                                                           Style="{StaticResource Body}"/>
                                            </StackPanel>
                                            <StackPanel Grid.Column="3"
                                                    VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Used, StringFormat='Used: {0}'}"
                                                           Style="{StaticResource Body}"
                                                           FontSize="10"/>
                                                <Ellipse Width="8"
                                                        Height="8"
                                                         Fill="{Binding Used, Converter={StaticResource BoolToColorConverter}}"
                                                         Stroke="{StaticResource PrimaryBrush}"
                                                         StrokeThickness="1"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Right: details -->
            <Border Grid.Column="2"
                    Style="{StaticResource Card}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal"
                                Margin="0,0,0,12">
                        <Border Style="{StaticResource AvatarCircle}"
                                Width="56"
                                Height="56"
                                CornerRadius="28">
                            <TextBlock Text="{Binding SelectedContact.FullName, Converter={StaticResource InitialsConverter}}"
                                       Foreground="{StaticResource PrimaryBrush}"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                        </Border>
                        <StackPanel Margin="12,0,0,0"
                                    VerticalAlignment="Center">
                            <TextBlock Text="{Binding SelectedContact.FullName}"
                                       Style="{StaticResource H2}"/>
                            <TextBlock Text="{Binding SelectedContact.Company}"
                                       Style="{StaticResource Body}"/>
                        </StackPanel>
                    </StackPanel>

                    <Grid Grid.Row="1"
                          Margin="0,4,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Margin="0,6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="First name"
                                       VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1"
                                     Text="{Binding SelectedContact.FirstName, UpdateSourceTrigger=PropertyChanged}"/>
                        </Grid>

                        <Grid Margin="0,6"
                              Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Last name"
                                       VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1"
                                     Text="{Binding SelectedContact.LastName, UpdateSourceTrigger=PropertyChanged}"/>
                        </Grid>

                        <Grid Margin="0,6"
                              Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Email"
                                       VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1"
                                     Text="{Binding SelectedContact.Email, UpdateSourceTrigger=PropertyChanged}"/>
                        </Grid>

                        <Grid Margin="0,6"
                              Grid.Row="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Phone"
                                       VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1"
                                     Text="{Binding SelectedContact.Phone, UpdateSourceTrigger=PropertyChanged}"/>
                        </Grid>

                        <Grid Margin="0,6"
                              Grid.Row="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Company"
                                       VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1"
                                     Text="{Binding SelectedContact.Company, UpdateSourceTrigger=PropertyChanged}"/>
                        </Grid>

                        <Grid Margin="0,6"
                              Grid.Row="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Used Status"
                                       VerticalAlignment="Center"/>
                            <CheckBox Grid.Column="1"
                                      IsChecked="{Binding SelectedContact.Used}"
                                      VerticalAlignment="Center"/>
                        </Grid>

                        <Grid Margin="0,6"
                              Grid.Row="6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Created"
                                       VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1"
                                       Text="{Binding SelectedContact.CreatedDate, StringFormat='{}{0:MM/dd/yyyy HH:mm}'}"
                                       VerticalAlignment="Center"
                                       Style="{StaticResource Body}"/>
                        </Grid>

                        <Grid Margin="0,6"
                              Grid.Row="7">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Last Modified"
                                       VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1"
                                       Text="{Binding SelectedContact.ModifiedDate, StringFormat='{}{0:MM/dd/yyyy HH:mm}'}"
                                       VerticalAlignment="Center"
                                       Style="{StaticResource Body}"/>
                        </Grid>

                        <StackPanel Grid.Row="8"
                                    Margin="0,12,0,0">
                            <TextBlock Text="Notes"/>
                            <TextBox TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     MinHeight="80"
                                     Text="{Binding SelectedContact.Notes, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </DockPanel>
</Window>

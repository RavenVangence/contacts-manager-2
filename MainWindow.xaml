<Window x:Class="ContactsManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:ContactsManager.ViewModels"
        xmlns:views="clr-namespace:ContactsManager.Views"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Contacts Manager"
        Height="640"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource SurfaceBrush}">

    <DockPanel LastChildFill="True">
        <!-- Menu -->
        <Menu DockPanel.Dock="Top"
              Background="{StaticResource CardBrush}">
            <MenuItem Header="File">
                <MenuItem Header="Import"
                          Command="{Binding ContactsViewModel.ImportCommand}"/>
                <MenuItem Header="Export"
                          Command="{Binding ContactsViewModel.ExportCommand}"/>
                <Separator/>
                <MenuItem Header="Exit"
                          Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="Contacts">
                <MenuItem Header="Open Contacts Manager"
                          Click="OpenContactsManager_Click"/>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Add Contact"
                          Command="{Binding ContactsViewModel.AddCommand}"/>
                <MenuItem Header="Edit Contact"
                          Command="{Binding ContactsViewModel.EditCommand}"/>
                <MenuItem Header="Delete Contact"
                          Command="{Binding ContactsViewModel.DeleteCommand}"/>
            </MenuItem>
            <MenuItem Header="View">
                <MenuItem Header="Sort by Name"
                          Command="{Binding ContactsViewModel.SortByNameCommand}"/>
                <MenuItem Header="Sort by Used Status"
                          Command="{Binding ContactsViewModel.SortByUsedCommand}"/>
            </MenuItem>
        </Menu>

        <!-- Simple Navigation Bar -->
        <Border DockPanel.Dock="Top"
                Style="{StaticResource TabContainer}">
            <StackPanel Orientation="Horizontal">
                <!-- Home Navigation Link -->
                <Button x:Name="HomeNavButton"
                        Background="Transparent"
                        Foreground="{StaticResource TextBrush}"
                        BorderThickness="0"
                        Padding="16,8"
                        Height="36"
                        Margin="0,0,8,0"
                        ToolTip="Go to Home"
                        Cursor="Hand"
                        Click="HomeNavButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="6"
                                                Height="{TemplateBinding Height}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"
                                                              Margin="{TemplateBinding Padding}"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver"
                                                     Value="True">
                                                <Setter Property="Background"
                                                        Value="{StaticResource SurfaceBrush}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <!-- Show active state when on home view -->
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsContactsViewActive}"
                                             Value="False">
                                    <Setter Property="Background"
                                            Value="{StaticResource PrimaryBrush}"/>
                                    <Setter Property="Foreground"
                                            Value="White"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe MDL2 Assets"
                                   Text="&#xE80F;"
                                   FontSize="14"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>
                        <TextBlock Text="Home"
                                   FontSize="14"
                                   FontWeight="Medium"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Contacts Navigation Link -->
                <Button x:Name="ContactsNavButton"
                        Background="Transparent"
                        Foreground="{StaticResource TextBrush}"
                        BorderThickness="0"
                        Padding="16,8"
                        Height="36"
                        Margin="0,0,8,0"
                        ToolTip="Go to Contacts"
                        Cursor="Hand"
                        Click="ContactsNavButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="6"
                                                Height="{TemplateBinding Height}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"
                                                              Margin="{TemplateBinding Padding}"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver"
                                                     Value="True">
                                                <Setter Property="Background"
                                                        Value="{StaticResource SurfaceBrush}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <!-- Show active state when on contacts view -->
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsContactsViewActive}"
                                             Value="True">
                                    <Setter Property="Background"
                                            Value="{StaticResource PrimaryBrush}"/>
                                    <Setter Property="Foreground"
                                            Value="White"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe MDL2 Assets"
                                   Text="&#xE77B;"
                                   FontSize="14"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>
                        <TextBlock Text="Contacts"
                                   FontSize="14"
                                   FontWeight="Medium"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>

        <!-- Content Area -->
        <Grid Margin="16">
            <!-- Welcome Screen (when contacts view is not active) -->
            <Grid Visibility="{Binding IsContactsViewActive, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}">
                <Border Style="{StaticResource Card}"
                        MaxWidth="600"
                        MaxHeight="400"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                    <StackPanel HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Margin="40">
                        <TextBlock Text="ðŸ“‹"
                                   FontSize="64"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,24"/>
                        <TextBlock Text="Welcome to Contacts Manager"
                                   Style="{StaticResource H1}"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,16"/>
                        <TextBlock Text="Click the Contacts button above to manage your contacts"
                                   Style="{StaticResource Body}"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,24"/>
                        <Button Style="{StaticResource PrimaryButton}"
                                Click="ContactsNavButton_Click"
                                MinWidth="200"
                                HorizontalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontFamily="Segoe MDL2 Assets"
                                           Text="&#xE77B;"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"/>
                                <TextBlock Text="Go to Contacts"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Contacts View (when active) -->
            <views:ContactsView x:Name="ContactsView"
                                DataContext="{Binding ContactsViewModel}"
                                Visibility="{Binding IsContactsViewActive, Converter={StaticResource BoolToVisibilityConverter}}"/>
        </Grid>
    </DockPanel>
</Window>

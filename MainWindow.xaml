<Window x:Class="ContactsManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:ContactsManager.ViewModels"
        xmlns:views="clr-namespace:ContactsManager.Views"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Height="640"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource SurfaceBrush}"
        WindowStyle="None"
        AllowsTransparency="True">

        <Window.Resources>
                <Style x:Key="NavButton"
                       TargetType="Button">
                        <Setter Property="Foreground"
                                Value="{StaticResource TextBrush}"/>
                        <Setter Property="BorderThickness"
                                Value="0"/>
                        <Setter Property="Padding"
                                Value="16,8"/>
                        <Setter Property="Height"
                                Value="36"/>
                        <Setter Property="Margin"
                                Value="0,0,8,0"/>
                        <Setter Property="Cursor"
                                Value="Hand"/>
                        <Setter Property="Background"
                                Value="Transparent"/>
                        <Setter Property="Template">
                                <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="6"
                                                        Height="{TemplateBinding Height}">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"
                                                                          Margin="{TemplateBinding Padding}"/>
                                                </Border>
                                        </ControlTemplate>
                                </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                        <Setter Property="Foreground"
                                                Value="{StaticResource PrimaryBrush}"/>
                                </Trigger>
                        </Style.Triggers>
                </Style>

                <!-- Maximize/Restore button that switches icon and tooltip based on WindowState -->
                <Style x:Key="MaxRestoreButton"
                       TargetType="Button"
                       BasedOn="{StaticResource NavButton}">
                        <Setter Property="Content"
                                Value="&#xE922;"/>
                        <!-- Maximize -->
                        <Setter Property="ToolTip"
                                Value="Maximize"/>
                        <Setter Property="FontFamily"
                                Value="Segoe MDL2 Assets"/>
                        <Style.Triggers>
                                <DataTrigger Binding="{Binding WindowState, RelativeSource={RelativeSource AncestorType=Window}}"
                                             Value="Maximized">
                                        <Setter Property="Content"
                                                Value="&#xE923;"/>
                                        <!-- Restore -->
                                        <Setter Property="ToolTip"
                                                Value="Restore Down"/>
                                </DataTrigger>
                        </Style.Triggers>
                </Style>

                <Style x:Key="HomeNavButton"
                       TargetType="Button"
                       BasedOn="{StaticResource NavButton}">
                        <Style.Triggers>
                                <DataTrigger Binding="{Binding DataContext.CurrentPageType, RelativeSource={RelativeSource AncestorType=Window}}"
                                             Value="Home">
                                        <Setter Property="Background"
                                                Value="Transparent"/>
                                        <Setter Property="Foreground"
                                                Value="{StaticResource PrimaryBrush}"/>
                                </DataTrigger>
                                <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}"
                                                           Value="True"/>
                                                <Condition Binding="{Binding DataContext.CurrentPageType, RelativeSource={RelativeSource AncestorType=Window}}"
                                                           Value="Home"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Background"
                                                Value="Transparent"/>
                                        <Setter Property="Foreground"
                                                Value="{StaticResource PrimaryBrush}"/>
                                </MultiDataTrigger>
                        </Style.Triggers>
                </Style>

                <Style x:Key="ContactsNavButton"
                       TargetType="Button"
                       BasedOn="{StaticResource NavButton}">
                        <Style.Triggers>
                                <DataTrigger Binding="{Binding DataContext.CurrentPageType, RelativeSource={RelativeSource AncestorType=Window}}"
                                             Value="Contacts">
                                        <Setter Property="Background"
                                                Value="Transparent"/>
                                        <Setter Property="Foreground"
                                                Value="{StaticResource PrimaryBrush}"/>
                                </DataTrigger>
                                <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}"
                                                           Value="True"/>
                                                <Condition Binding="{Binding DataContext.CurrentPageType, RelativeSource={RelativeSource AncestorType=Window}}"
                                                           Value="Contacts"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Background"
                                                Value="Transparent"/>
                                        <Setter Property="Foreground"
                                                Value="{StaticResource PrimaryBrush}"/>
                                </MultiDataTrigger>
                        </Style.Triggers>
                </Style>
        </Window.Resources>

        <DockPanel LastChildFill="True">

                <!-- Title Bar -->
                <Border DockPanel.Dock="Top"
                        Style="{StaticResource TabContainer}"
                        MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"
                        MouseMove="TitleBar_MouseMove"
                        MouseLeftButtonUp="TitleBar_MouseLeftButtonUp">
                        <Grid>
                                <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Left-aligned Title and Navigation -->
                                <StackPanel Orientation="Horizontal"
                                            Grid.Column="0"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"
                                            Margin="16,0,0,0">
                                        <TextBlock Text="Contacts Manager"
                                                   FontFamily="Consolas"
                                                   FontSize="22"
                                                   FontWeight="Medium"
                                                   VerticalAlignment="Center"
                                                   Margin="0,6,16,0"/>

                                        <!-- Navigation Links -->
                                        <Button x:Name="HomeNavButton"
                                                Style="{StaticResource HomeNavButton}"
                                                ToolTip="Go to Home"
                                                VerticalAlignment="Center"
                                                Click="HomeNavButton_Click"
                                                Margin="0,8,0,0">
                                                <StackPanel Orientation="Horizontal">
                                                        <TextBlock FontFamily="Segoe MDL2 Assets"
                                                                   Text="&#xE80F;"
                                                                   FontSize="16"
                                                                   VerticalAlignment="Center"
                                                                   Margin="0,0,8,0"/>
                                                        <TextBlock Text="Home"
                                                                   FontSize="14"
                                                                   FontWeight="Normal"
                                                                   VerticalAlignment="Center"/>
                                                </StackPanel>
                                        </Button>

                                        <Button x:Name="ContactsNavButton"
                                                Style="{StaticResource ContactsNavButton}"
                                                ToolTip="Go to Contacts"
                                                VerticalAlignment="Center"
                                                Click="ContactsNavButton_Click"
                                                Margin="0,8,0,0">
                                                <StackPanel Orientation="Horizontal">
                                                        <TextBlock FontFamily="Segoe MDL2 Assets"
                                                                   Text="&#xE77B;"
                                                                   FontSize="14"
                                                                   VerticalAlignment="Center"
                                                                   Margin="0,0,8,0"/>
                                                        <TextBlock Text="Contacts"
                                                                   FontSize="14"
                                                                   FontWeight="Normal"
                                                                   VerticalAlignment="Center"/>
                                                </StackPanel>
                                        </Button>
                                </StackPanel>

                                <!-- Window Controls -->
                                <StackPanel Orientation="Horizontal"
                                            Grid.Column="1"
                                            HorizontalAlignment="Right">
                                        <Button x:Name="MinimizeButton"
                                                Content="&#xE921;"
                                                FontFamily="Segoe MDL2 Assets"
                                                ToolTip="Minimize"
                                                Style="{StaticResource NavButton}"
                                                Click="MinimizeButton_Click"/>
                                        <Button x:Name="MaximizeButton"
                                                Style="{StaticResource MaxRestoreButton}"
                                                Click="MaximizeButton_Click"/>
                                        <Button x:Name="CloseButton"
                                                Content="&#xE8BB;"
                                                FontFamily="Segoe MDL2 Assets"
                                                ToolTip="Close"
                                                Style="{StaticResource NavButton}"
                                                Click="CloseButton_Click"/>
                                </StackPanel>
                        </Grid>
                </Border>

                <!-- Content Area with Frame -->
                <Frame x:Name="MainFrame"
                       NavigationUIVisibility="Hidden"
                       Margin="16"/>
        </DockPanel>
</Window>

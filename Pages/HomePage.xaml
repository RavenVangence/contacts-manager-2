<Page x:Class="ContactsManager.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="450"
        d:DesignWidth="800"
      Title="Home">

    <Grid Margin="16">
        <!-- Welcome Screen -->
        <Border Style="{StaticResource Card}"
                MaxWidth="600"
                MaxHeight="400"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="40">
                <TextBlock Text="ðŸ“‹"
                           FontSize="64"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,24"/>
                <TextBlock Text="Welcome to Contacts Manager"
                           Style="{StaticResource H1}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,16"/>
                <TextBlock Text="Click the Contacts button above to manage your contacts"
                           Style="{StaticResource Body}"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           Margin="0,0,0,24"/>
                <Button Style="{StaticResource PrimaryButton}"
                        Click="GoToContacts_Click"
                        MinWidth="200"
                        HorizontalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe MDL2 Assets"
                                   Text="&#xE77B;"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>
                        <TextBlock Text="Go to Contacts"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Page>

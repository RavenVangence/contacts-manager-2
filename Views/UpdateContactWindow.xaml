<Window x:Class="ContactsManager.Views.UpdateContactWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Update Contact"
        Height="500"
        Width="400"
        Background="{StaticResource SurfaceBrush}"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterParent">

    <Border Style="{StaticResource Card}"
            Margin="16">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Contact Information"
                    Style="{StaticResource H1}"
                    Margin="0,0,0,16"/>

            <ScrollViewer Grid.Row="1"
                    VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <Grid Margin="0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="First name"
                                VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1"
                                Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>

                    <Grid Margin="0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Last name"
                                VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1"
                                Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>

                    <Grid Margin="0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Email"
                                VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1"
                                Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>

                    <Grid Margin="0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Phone"
                                VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1"
                                Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>

                    <Grid Margin="0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Company"
                                VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1"
                                Text="{Binding Company, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>

                    <Grid Margin="0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Used"
                                VerticalAlignment="Center"/>
                        <CheckBox Grid.Column="1"
                                IsChecked="{Binding Used}"
                                VerticalAlignment="Center"/>
                    </Grid>

                    <StackPanel Margin="0,8">
                        <TextBlock Text="Notes"
                                Margin="0,0,0,4"/>
                        <TextBox Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 MinHeight="80"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>

            <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
                <Button Content="Save"
                        Style="{StaticResource PrimaryButton}"
                        Click="SaveButton_Click"
                        MinWidth="80"/>
                <Button Content="Cancel"
                        Style="{StaticResource GhostButton}"
                        Click="CancelButton_Click"
                        MinWidth="80"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
